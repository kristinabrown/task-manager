<form class="form-horizontal" action="/tasks" method="post">
  <p class="lead">Enter a new task:</p>
  <div class="form-group">
    <div class="col-sm-10">
      <input type='text' class="form-control" name='task[title]' rows="2" placeholder="Task"/><br/>
    </div>
    <div class="col-sm-10">
      <textarea name='task[description]' class="form-control" rows="5" placeholder="Task Description"></textarea><br/>
    </div>
  </div>
  
    <button type="button" class="btn btn-defualt"><input type='submit'/></button>
</form>